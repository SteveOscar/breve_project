
<%= form_for([current_user, @post], html: {multipart: true}) do |f| %>
  <ul>
  <% @post.errors.full_messages.each do |error| %>
    <li> <%= error %> </li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>

    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </p>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <p>

    <%= f.label :image, "Attach an image" %>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
